{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["api/_lib/*"]
    }
  },
  "include": [
    "vite.config.ts", 
    "tailwind.config.js", 
    "postcss.config.js",
    "api/**/*.ts",
    "scripts/**/*.ts",
    "src/types.ts",
    "src/utils/**/*.ts"
  ]
}