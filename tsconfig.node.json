{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "Bundler",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "vite.config.ts", 
    "tailwind.config.js", 
    "postcss.config.js",
    "api/**/*.ts",
    "scripts/**/*.ts",
    "src/types.ts",
    "src/utils/**/*.ts"
  ]
}